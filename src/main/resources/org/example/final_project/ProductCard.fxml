<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="360.0" prefWidth="220.0" spacing="10" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0); -fx-background-radius: 8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.final_project.Controller.ProductCardController">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <ImageView fx:id="itemImage" fitHeight="120" fitWidth="180" preserveRatio="true" style="-fx-background-color: #ddd;" />

    <Label fx:id="itemName" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Modern Desk" wrapText="true" />

    <HBox alignment="CENTER" spacing="5">
        <Label fx:id="itemMaterial" style="-fx-background-color: #eee; -fx-padding: 3 8; -fx-font-size: 10px; -fx-text-fill: #555; -fx-background-radius: 5;" text="Wood" />
        <Label fx:id="itemColor" style="-fx-background-color: #eee; -fx-padding: 3 8; -fx-font-size: 10px; -fx-text-fill: #555; -fx-background-radius: 5;" text="Brown" />
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Label fx:id="itemPrice" alignment="CENTER" prefHeight="20.0" prefWidth="55.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="\$150.00" />
        <Label fx:id="discountLabel" style="-fx-text-fill: red; -fx-font-weight: bold; -fx-font-size: 12px;" text="10% OFF" visible="false" />
    </HBox>

    <Label fx:id="stockLabel" alignment="CENTER" style="-fx-font-size: 11px; -fx-text-fill: #666;" text="10 in stock" />

    <HBox alignment="CENTER" spacing="15" style="-fx-padding: 5 0;">
        <Button fx:id="btnMinus" prefWidth="30" style="-fx-background-color: #f4f4f4; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-cursor: hand;" text="-" />
        <Label fx:id="quantityLabel" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="1" />
        <Button fx:id="btnPlus" prefWidth="30" style="-fx-background-color: #f4f4f4; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-cursor: hand;" text="+" />
    </HBox>

    <VBox alignment="CENTER" spacing="8">
        <Button fx:id="btnAddToCart" maxWidth="Infinity" onAction="#handleAddToCart" style="-fx-background-color: #f4b400; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Add to Cart" />
    </VBox>

</VBox>
