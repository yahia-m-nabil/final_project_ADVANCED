<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefWidth="1200" prefHeight="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.final_project.Controller.SellerCheckoutController">

    <top>
        <HBox spacing="20" style="-fx-background-color: #333; -fx-padding: 15; -fx-alignment: CENTER_LEFT;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="FurnitureApp | Supply to Warehouse" textFill="WHITE" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button onAction="#goBackToSellerPage" text="Back to Dashboard" style="-fx-cursor: hand;" />
        </HBox>
    </top>

    <center>
        <HBox spacing="30" style="-fx-padding: 30; -fx-background-color: #f9f9f9;">

            <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Review Your Inventory" />
                <Separator />

                <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colItem" prefWidth="180" text="Furniture Item" />
                        <TableColumn fx:id="colQty" prefWidth="60" text="Qty" />
                        <TableColumn fx:id="colPrice" prefWidth="100" text="Price" />
                        <TableColumn fx:id="colSubtotal" prefWidth="100" text="Subtotal" />
                        <TableColumn fx:id="colActions" prefWidth="80" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <VBox spacing="20" prefWidth="350" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Supply Summary" />
                <Separator />

                <VBox spacing="10">
                    <HBox>
                        <Label text="Gross Earnings:" textFill="#666" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="grossEarningsLabel" text="\$0.00" />
                    </HBox>
                    <HBox>
                        <Label text="Platform Fee (5%):" textFill="#666" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="platformFeeLabel" text="\$0.00" />
                    </HBox>
                    <Separator />
                    <HBox>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Net Earnings:" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="netEarningsLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4caf50;" text="\$0.00" />
                    </HBox>
                </VBox>

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="8">
                    <Label text="Select Target Warehouse:" style="-fx-font-weight: bold;" />
                    <ComboBox fx:id="warehouseSelector" maxWidth="Infinity" promptText="Choose Location..." />
                    <Label text="Your items will be added to this warehouse." style="-fx-font-size: 10px; -fx-text-fill: #888;" />
                </VBox>

                <VBox spacing="10" alignment="CENTER">
                    <Button fx:id="supplyButton" onAction="#handleSupplyToWarehouse" maxWidth="Infinity"
                            style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 15; -fx-cursor: hand;"
                            text="Supply &amp; Get Paid" />
                    <Label text="Secure Payment Guaranteed" style="-fx-font-size: 11px;" textFill="#4caf50" />
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>

