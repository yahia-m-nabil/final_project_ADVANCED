<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.final_project.Controller.AdminController">

    <left>
        <VBox spacing="12" style="-fx-background-color: #2c3e50; -fx-padding: 25; -fx-min-width: 220;">
            <Label text="ADMIN PANEL" textFill="WHITE">
                <font><Font name="System Bold" size="22.0" /></font>
            </Label>
            <Separator opacity="0.2" />

            <Button maxWidth="Infinity" onAction="#showDashboard" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;" text="ðŸ  Dashboard" />
            <Button maxWidth="Infinity" onAction="#manageUsers" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;" text="ðŸ‘¥ Manage Customers" />
            <Button maxWidth="Infinity" onAction="#manageSellers" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;" text="ðŸª Manage Sellers" />
            <Button maxWidth="Infinity" onAction="#manageProducts" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;" text="ðŸ“¦ Manage Products" />
            <Button maxWidth="Infinity" onAction="#manageWarehouses" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;" text="ðŸ¢ Warehouses" />

            <Region VBox.vgrow="ALWAYS" />
            <Button maxWidth="Infinity" onAction="#handleLogout" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="LOGOUT" />
        </VBox>
    </left>

    <center>
        <VBox spacing="25" style="-fx-padding: 35; -fx-background-color: #f4f7f6;">
            <Label fx:id="welcomeLabel" text="Welcome, Administrator" textFill="#34495e">
                <font><Font name="System Bold" size="28.0" /></font>
            </Label>

            <HBox spacing="20">
                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12;" HBox.hgrow="ALWAYS">
                    <Label text="Total Customers" textFill="#7f8c8d" />
                    <Label fx:id="userCountLabel" text="0" textFill="#2980b9"><font><Font name="System Bold" size="40.0" /></font></Label>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12;" HBox.hgrow="ALWAYS">
                    <Label text="Total Sellers" textFill="#7f8c8d" />
                    <Label fx:id="sellerCountLabel" text="0" textFill="#8e44ad"><font><Font name="System Bold" size="40.0" /></font></Label>
                </VBox>

                <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12;" HBox.hgrow="ALWAYS">
                    <Label text="Live Products" textFill="#7f8c8d" />
                    <Label fx:id="productCountLabel" text="0" textFill="#27ae60"><font><Font name="System Bold" size="40.0" /></font></Label>
                </VBox>
            </HBox>

            <StackPane fx:id="contentPane" style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 20;" VBox.vgrow="ALWAYS">
                <Label text="Select an option from the sidebar." textFill="#bdc3c7" />
            </StackPane>
        </VBox>
    </center>
</BorderPane>