<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.example.final_project.Controller.AddProductDialogController"
          style="-fx-padding: 20;">

    <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <ComboBox fx:id="typeComboBox" promptText="Select Type" GridPane.columnIndex="1" GridPane.rowIndex="0"
              prefWidth="200" />

    <Label text="Material:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ComboBox fx:id="materialComboBox" promptText="Select Material" GridPane.columnIndex="1" GridPane.rowIndex="1"
              prefWidth="200" />

    <Label text="Color:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="colorComboBox" promptText="Select Color" GridPane.columnIndex="1" GridPane.rowIndex="2"
              prefWidth="200" />

    <Label text="Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="quantityField" promptText="Quantity (e.g., 10)" GridPane.columnIndex="1" GridPane.rowIndex="3"
               prefWidth="200" />

</GridPane>

