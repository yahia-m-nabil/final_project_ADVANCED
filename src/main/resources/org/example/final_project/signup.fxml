<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane prefWidth="1200" prefHeight="800" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.final_project.Controller.SignupController">

    <VBox alignment="CENTER" spacing="20" maxWidth="450" maxHeight="600"
          style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">

        <VBox alignment="CENTER" spacing="5">
            <Label text="FurnitureApp" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            <Label text="Create a new account" style="-fx-text-fill: #777; -fx-font-size: 14px;" />
        </VBox>

        <Separator />

        <VBox spacing="10">
            <Label text="I want to join as a:" style="-fx-font-weight: bold; -fx-text-fill: #555;" />
            <HBox spacing="10" alignment="CENTER">
                <ToggleButton fx:id="roleCustomer" text="Customer" selected="true" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                              style="-fx-padding: 10; -fx-font-weight: bold;" />
                <ToggleButton fx:id="roleSeller" text="Seller" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                              style="-fx-padding: 10; -fx-font-weight: bold;" />
            </HBox>
        </VBox>

        <VBox spacing="12">
            <VBox spacing="5">
                <Label text="Full Name" style="-fx-font-size: 11px; -fx-text-fill: #666;" />
                <TextField fx:id="nameField" promptText="Enter your name"
                           style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 5;" />
            </VBox>

            <VBox spacing="5">
                <Label text="Email Address" style="-fx-font-size: 11px; -fx-text-fill: #666;" />
                <TextField fx:id="emailField" promptText="Enter your email"
                           style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 5;" />
            </VBox>

            <VBox spacing="5">
                <Label text="Password" style="-fx-font-size: 11px; -fx-text-fill: #666;" />
                <PasswordField fx:id="passwordField" promptText="Create a password"
                               style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 5;" />
            </VBox>
        </VBox>

        <Button onAction="#handleSignup" text="Register Now" maxWidth="Infinity"
                style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 12; -fx-cursor: hand;" />

        <HBox alignment="CENTER" spacing="5">
            <Label text="Already have an account?" style="-fx-text-fill: #777;" />
            <Hyperlink text="Login" style="-fx-text-fill: #f4b400; -fx-padding: 0; -fx-font-weight: bold;" onAction="#navigateToLogin" />
        </HBox>

    </VBox>
</StackPane>