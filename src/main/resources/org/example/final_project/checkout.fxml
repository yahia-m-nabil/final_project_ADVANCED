<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefWidth="1200" prefHeight="800" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.final_project.Controller.CheckoutController">

    <top>
        <HBox spacing="20" style="-fx-background-color: #333; -fx-padding: 15; -fx-alignment: CENTER_LEFT;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="FurnitureApp | Checkout" textFill="WHITE" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button onAction="#goBackToStore" text="Back to Store" style="-fx-cursor: hand;" />
        </HBox>
    </top>

    <center>
        <HBox spacing="30" style="-fx-padding: 30; -fx-background-color: #f9f9f9;">

            <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Review Your Order" />
                <Separator />

                <TableView fx:id="checkoutTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colItem" prefWidth="180" text="Furniture Item" />
                        <TableColumn fx:id="colQty" prefWidth="60" text="Qty" />
                        <TableColumn fx:id="colPrice" prefWidth="100" text="Price" />
                        <TableColumn fx:id="colSubtotal" prefWidth="100" text="Subtotal" />
                        <TableColumn fx:id="colActions" prefWidth="80" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <VBox spacing="20" prefWidth="350" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Order Summary" />
                <Separator />

                <VBox spacing="10">
                    <HBox>
                        <Label text="Items Total:" textFill="#666" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="itemsTotalLabel" text="\$0.00" />
                    </HBox>
                    <HBox>
                        <Label text="Tax (15%):" textFill="#666" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="taxLabel" text="\$0.00" />
                    </HBox>
                    <Separator />
                    <HBox>
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Total Amount:" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label fx:id="finalTotalLabel" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="\$0.00" />
                    </HBox>
                </VBox>

                <Region VBox.vgrow="ALWAYS" />

                <VBox spacing="8">
                    <Label text="Select Pickup Warehouse:" style="-fx-font-weight: bold;" />
                    <ComboBox fx:id="warehouseSelector" maxWidth="Infinity" promptText="Choose Location..." />
                    <Label text="Items will be deducted from this stock." style="-fx-font-size: 10px; -fx-text-fill: #888;" />
                </VBox>

                <VBox spacing="10" alignment="CENTER">
                    <Button fx:id="placeOrderButton" onAction="#handlePlaceOrder" maxWidth="Infinity"
                            style="-fx-background-color: #f4b400; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 15; -fx-cursor: hand;"
                            text="Confirm &amp; Pay" />
                    <Label text="Secure Transaction Guaranteed" style="-fx-font-size: 11px;" textFill="#4caf50" />
                </VBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>