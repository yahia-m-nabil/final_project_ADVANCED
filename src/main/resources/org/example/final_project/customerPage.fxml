<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.final_project.Controller.CustomerController">

    <top>
        <HBox spacing="20" style="-fx-background-color: #333; -fx-padding: 15; -fx-alignment: CENTER_LEFT;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="FurnitureApp" textFill="WHITE" />
            <HBox HBox.hgrow="ALWAYS" />
            <TextField fx:id="searchField" promptText="Search furniture..." />
            <Button onAction="#handleSearch" text="Search" />
            <Button onAction="#goToCart" style="-fx-background-color: #f4b400; -fx-text-fill: white;" text="My Cart" />
            <Button onAction="#goToStore" text="Store" />
        </HBox>
    </top>

    <left>
        <VBox spacing="15" style="-fx-padding: 15; -fx-background-color: #f4f4f4; -fx-min-width: 200;">
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 0 0 20 0;">
                <Circle fill="#bbbbbb" radius="35.0" stroke="WHITE" strokeType="INSIDE" />
                <Label fx:id="sidebarName" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="User Name" />
                <Label fx:id="sidebarEmail" style="-fx-text-fill: #888; -fx-font-size: 11px;" text="user@email.com" />
            </VBox>
            <Separator />
            <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #555;" text="NAVIGATION" />
            <Region VBox.vgrow="ALWAYS" />
            <Button onAction="#handleLogout" maxWidth="Infinity" style="-fx-background-color: #d9534f; -fx-text-fill: white;" text="Logout" />
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="25" style="-fx-padding: 30;">

                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 5;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Account Information" />
                    <Separator />
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100" prefWidth="120" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>

                        <Label text="Member ID:" textFill="#666" GridPane.rowIndex="0" />
                        <TextField fx:id="idField" editable="false" style="-fx-background-color: #f4f4f4; -fx-text-fill: #888;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Full Name:" textFill="#666" GridPane.rowIndex="1" />
                        <TextField fx:id="nameField" editable="false" style="-fx-background-color: #f4f4f4; -fx-text-fill: #888;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Email Address:" textFill="#666" GridPane.rowIndex="2" />
                        <TextField fx:id="emailField" editable="false" style="-fx-background-color: #f4f4f4; -fx-text-fill: #888;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                    </GridPane>
                </VBox>

                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 5;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="My Cart / Wishlist" />
                    <Separator />
                    <TableView fx:id="wishlistTable" prefHeight="200.0">
                        <columns>
                            <TableColumn fx:id="colWishItem" prefWidth="200.0" text="Furniture Item" />
                            <TableColumn fx:id="colWishMaterial" prefWidth="100.0" text="Material" />
                            <TableColumn fx:id="colWishPrice" prefWidth="100.0" text="Price" />
                            <TableColumn fx:id="colWishQty" prefWidth="80.0" text="Qty" />
                            <TableColumn fx:id="colActions" prefWidth="100.0" text="Actions" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>

                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 5;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Recent Orders" />
                    <Separator />
                    <TableView fx:id="orderTable" prefHeight="250.0">
                        <columns>
                            <TableColumn fx:id="colOrderId" prefWidth="100.0" text="Order ID" />
                            <TableColumn fx:id="colDate" prefWidth="150.0" text="Date" />
                            <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
                            <TableColumn fx:id="colTotal" prefWidth="120.0" text="Total Price" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
