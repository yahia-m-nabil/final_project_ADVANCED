<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.final_project.Controller.LoginController">

    <VBox alignment="CENTER" spacing="20" maxWidth="400" maxHeight="500"
          style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">

        <VBox alignment="CENTER" spacing="5">
            <Label text="FurnitureApp" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333;" />
            <Label text="Please login to your account" style="-fx-text-fill: #777; -fx-font-size: 14px;" />
        </VBox>

        <Separator />

        <VBox spacing="10">
            <Label text="Login As:" style="-fx-font-weight: bold; -fx-text-fill: #555;" />
            <HBox spacing="10" alignment="CENTER">
                <ToggleButton fx:id="roleCustomer" text="Customer" selected="true" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                              style="-fx-padding: 8;"/>
                <ToggleButton fx:id="roleSeller" text="Seller" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                              style="-fx-padding: 8;"/>
                <ToggleButton fx:id="roleAdmin" text="Admin" maxWidth="Infinity" HBox.hgrow="ALWAYS"
                              style="-fx-padding: 8;"/>
            </HBox>
        </VBox>

        <VBox spacing="15">
            <VBox spacing="5">
                <Label text="Email Address" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
                <TextField fx:id="emailField" promptText="Enter your email"
                           style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 5;" />
            </VBox>

            <VBox spacing="5">
                <Label text="Password" style="-fx-font-size: 12px; -fx-text-fill: #666;" />
                <PasswordField fx:id="passwordField" promptText="Enter your password"
                               style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 5;" />
            </VBox>
        </VBox>

        <Button onAction="#handleLogin" text="Login" maxWidth="Infinity"
                style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 12; -fx-cursor: hand;" />

        <HBox alignment="CENTER" spacing="5">
            <Label text="Don't have an account?" style="-fx-text-fill: #777;" />
            <Hyperlink text="Sign Up" style="-fx-text-fill: #f4b400; -fx-padding: 0;" onAction="#navigateToSignup" />
        </HBox>

    </VBox>
</StackPane>