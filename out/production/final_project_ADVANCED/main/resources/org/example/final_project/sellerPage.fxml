<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.org.example.final_project.Controller.SellerController">

    <top>
        <HBox spacing="20" style="-fx-background-color: #333; -fx-padding: 15; -fx-alignment: CENTER_LEFT;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="FurnitureApp | Seller Central" textFill="WHITE" />
            <HBox HBox.hgrow="ALWAYS" />
            <Button style="-fx-background-color: #f4b400; -fx-text-fill: white; -fx-font-weight: bold;" text="+ Add New Product" />
        </HBox>
    </top>

    <left>
        <VBox spacing="15" style="-fx-padding: 15; -fx-background-color: #f4f4f4; -fx-min-width: 200;">
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 0 0 20 0;">
                <Circle fill="#555" radius="35.0" stroke="WHITE" />
                <Label fx:id="sellerNameLabel" style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Seller Name" />
                <Label style="-fx-text-fill: #2e7d32; -fx-font-weight: bold; -fx-font-size: 11px;" text="Verified Seller" />
            </VBox>

            <Separator />

            <Label style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #555;" text="MANAGEMENT" />

            <Region VBox.vgrow="ALWAYS" />

            <Button maxWidth="Infinity" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold;" text="Logout" />
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="25" style="-fx-padding: 30;">

                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 5;">
                    <HBox alignment="CENTER_LEFT">
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Stock Management" />
                        <Region HBox.hgrow="ALWAYS" />
                        <TextField promptText="Search items..." />
                    </HBox>
                    <Separator />
                    <TableView fx:id="inventoryTable" prefHeight="300.0">
                        <columns>
                            <TableColumn fx:id="colItemId" prefWidth="60" text="ID" />
                            <TableColumn fx:id="colItemName" prefWidth="150" text="Item Type" />
                            <TableColumn fx:id="colMaterial" prefWidth="100" text="Material" />
                            <TableColumn fx:id="colColor" prefWidth="100" text="Color" />
                            <TableColumn fx:id="colPrice" prefWidth="100" text="Price" />
                            <TableColumn fx:id="colStock" prefWidth="80" text="Qty" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>

                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0); -fx-background-radius: 5;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sales History" />
                    <Separator />
                    <TableView fx:id="salesTable" prefHeight="250.0">
                        <columns>
                            <TableColumn fx:id="colSaleId" prefWidth="100" text="Order ID" />
                            <TableColumn fx:id="colSaleDate" prefWidth="150" text="Date" />
                            <TableColumn fx:id="colSaleStatus" prefWidth="120" text="Status" />
                            <TableColumn fx:id="colSaleRevenue" prefWidth="120" text="Total Revenue" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>
