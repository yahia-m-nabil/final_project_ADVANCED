<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ecommerce.controller.StoreController">

    <top>
        <HBox spacing="20" style="-fx-background-color: #333; -fx-padding: 15; -fx-alignment: CENTER_LEFT;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="FurnitureApp" textFill="WHITE" />

            <HBox HBox.hgrow="ALWAYS" />

            <TextField fx:id="searchField" prefWidth="250" promptText="Search furniture..." />
            <Button text="Search" />

            <Button style="-fx-background-color: #f4b400; -fx-text-fill: white; -fx-font-weight: bold;" text="My Cart" />
            <Button text="Profile" />
        </HBox>
    </top>

    <left>
        <VBox spacing="15" style="-fx-padding: 15; -fx-background-color: #f4f4f4; -fx-min-width: 220;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Filters &amp; Sorting" />

            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #555;" text="Sort By" />
                <ComboBox fx:id="sortComboBox" maxWidth="Infinity" promptText="Select Order">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Price: Low to High" />
                            <String fx:value="Price: High to Low" />
                            <String fx:value="Product ID" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>

            <Separator />

            <Accordion>
                <panes>
                    <TitledPane expanded="true" text="Category">
                        <VBox spacing="8">
                            <CheckBox fx:id="checkChairs" selected="true" text="Chairs" />
                            <CheckBox fx:id="checkDesks" selected="true" text="Desks" />
                            <CheckBox fx:id="checkTables" selected="true" text="Tables" />
                        </VBox>
                    </TitledPane>

                    <TitledPane expanded="true" text="Material">
                        <VBox spacing="8">
                            <CheckBox fx:id="checkWood" selected="true" text="Wood" />
                            <CheckBox fx:id="checkMetal" selected="true" text="Metal" />
                            <CheckBox fx:id="checkPlastic" selected="true" text="Plastic" />
                        </VBox>
                    </TitledPane>

                    <TitledPane expanded="false" text="Color">
                        <VBox spacing="8">
                            <CheckBox fx:id="checkBrown" selected="true" text="Brown" />
                            <CheckBox fx:id="checkWhite" selected="true" text="White" />
                            <CheckBox fx:id="checkBlack" selected="true" text="Black" />
                        </VBox>
                    </TitledPane>
                </panes>
            </Accordion>

            <Region VBox.vgrow="ALWAYS" />

            <Button maxWidth="Infinity" style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-font-weight: bold;" text="Logout" />
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" prefHeight="384.0" prefWidth="474.0" style="-fx-background-color: transparent;">
            <TilePane fx:id="productGrid" hgap="20" prefColumns="3" style="-fx-padding: 20;" vgap="20">
            </TilePane>
        </ScrollPane>
    </center>

</BorderPane>
